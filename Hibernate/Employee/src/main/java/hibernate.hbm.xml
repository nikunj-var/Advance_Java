
 
<hibernate-mapping> 
  <class name="com.cetpa.Employee" table="employeeinfo">
   <id name="eid" column="emp_id">
    <generator class="assigned" />
   </id>
   <property name="name" column="emp_name" />
   <property name="department" column="emp_dept"/>
   <property name="salary" column="emp_salary"/>
  </class>	   
</hibernate-mapping>  